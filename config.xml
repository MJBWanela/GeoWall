<?xml version='1.0' encoding='utf-8'?>

<widget id="com.majiba.geowall" version="1.5.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GeoWall</name>
    <description>
        Un juego por aburrimiento
    </description>
    <author email="info@majiba.com" href="http://majiba.com">
       majiba.com
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />         
    
    <preference name="permissions" value="none"/>
    <preference name="android-build-tool" value="gradle" /> 
    <gap:plugin name="cordova-plugin-admobpro" source="npm" />
    
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
    <preference name="orientation" value="portrait"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="Icono.png"/>     
    <platform name="android">
        <preference name="orientation" value="portrait"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="wp8">
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
