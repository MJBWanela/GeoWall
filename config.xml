<?xml version='1.0' encoding='utf-8'?>
<widget id="com.majiba.geowall" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
     <name>GeoWall</name>
    <description>
        Un juego por aburrimiento
    </description>
    <author email="info@majiba.com" href="http://majiba.com">
       majiba.com
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
<!--false controlaremos nosotros cuando se quita la pantalla de splash - true se quita solo-->
     <preference name="AutoHideSplashScreen" value="true" />
     <preference name="SplashScreenDelay" value="8000" />

     <preference name="orientation" value="portrait"/>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="Icono.png"/>     
    <platform name="android">
        <allow-intent href="market:*" />
         <!-- you can use any density that exists in the Android project -->
        <splash src="res/splash.png" density="port-hdpi"/>
        <splash src="res/splash.png" density="port-ldpi"/>
        <splash src="res/splash.png" density="port-mdpi"/>
        <splash src="res/splash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
